<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint_green"
    tools:context=".ui.hr.ProfileFragment">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/arrow_back_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textEmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/my_profile"
        android:textColor="@color/white"
        android:textSize="@dimen/text_sub_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewProfile"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmp" />

    <ImageView
        android:id="@+id/profileImageCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile_circle"
        android:background="@drawable/profile_circle_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmp" />



    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:contentDescription="TODO"
        android:src="@drawable/prof_pic"
        app:layout_constraintBottom_toBottomOf="@+id/profileImageCircle"
        app:layout_constraintEnd_toEndOf="@+id/profileImageCircle"
        app:layout_constraintStart_toStartOf="@+id/profileImageCircle"
        app:layout_constraintTop_toTopOf="@+id/profileImageCircle" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/mint_green"
        android:textSize="@dimen/text_sub_header"
        app:layout_constraintEnd_toEndOf="@+id/profileImageCircle"
        app:layout_constraintStart_toStartOf="@+id/profileImageCircle"
        app:layout_constraintTop_toBottomOf="@+id/profileImageCircle" />

    <ImageView
        android:id="@+id/iconSpecialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_spcialist_profile"
        app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <TextView
        android:id="@+id/specialist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iconSpecialist"
        app:layout_constraintStart_toEndOf="@+id/iconSpecialist"
        app:layout_constraintTop_toTopOf="@+id/iconSpecialist" />

    <ImageView
        android:id="@+id/iconGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_gender_profile"
        app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/iconSpecialist" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iconGender"
        app:layout_constraintStart_toEndOf="@+id/iconGender"
        app:layout_constraintTop_toTopOf="@+id/iconGender" />

    <ImageView
        android:id="@+id/iconDOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_dob_profile"
        app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/iconGender" />

    <TextView
        android:id="@+id/birthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iconDOB"
        app:layout_constraintStart_toEndOf="@+id/iconDOB"
        app:layout_constraintTop_toTopOf="@+id/iconDOB" />

    <ImageView
        android:id="@+id/iconAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_address_profile"
        app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/iconDOB" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iconAddress"
        app:layout_constraintStart_toEndOf="@+id/iconAddress"
        app:layout_constraintTop_toTopOf="@+id/iconAddress" />

    <ImageView
        android:id="@+id/iconLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_love_profile"
        app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/iconAddress" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iconLove"
        app:layout_constraintStart_toEndOf="@+id/iconLove"
        app:layout_constraintTop_toTopOf="@+id/iconLove" />

    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_email_profile"
        app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/iconLove" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iconEmail"
        app:layout_constraintStart_toEndOf="@+id/iconEmail"
        app:layout_constraintTop_toTopOf="@+id/iconEmail" />

    <ImageView
        android:id="@+id/iconPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_phone_profile"
        app:layout_constraintStart_toStartOf="@+id/cardViewProfile"
        app:layout_constraintTop_toBottomOf="@+id/iconEmail" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iconPhone"
        app:layout_constraintStart_toEndOf="@+id/iconPhone"
        app:layout_constraintTop_toTopOf="@+id/iconPhone" />


    <ImageView
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="78dp"
        android:src="@drawable/profile_circle_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/icEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_profile"
        app:layout_constraintBottom_toBottomOf="@+id/btnEditProfile"
        app:layout_constraintEnd_toEndOf="@+id/btnEditProfile"
        app:layout_constraintStart_toStartOf="@id/btnEditProfile"
        app:layout_constraintTop_toTopOf="@+id/btnEditProfile" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:indeterminateTint="@color/mint_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>